<%= form_for(@list) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :public %>
  <%= f.check_box :public %><br>

  <h2>Tasks</h2>
  <%= f.fields_for :tasks do |task| %>
    <div class="task">
      <%= task.label :done %>
      <%= task.check_box :done %>
      <%= task.text_field :text, placeholder: "Task" %>
      <div class="destroy-task">
        Destroy Task
        <%= task.check_box :_destroy %>
      </div>
    </div>
  <% end %>

  <%= f.submit class: "btn btn-primary" %>
<% end %>
